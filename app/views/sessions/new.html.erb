<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
  <div class="card p-5 text-white" style="background: rgba(255, 255, 255, 0.1); backdrop-filter: blur(10px); border-radius: 20px; border: 1px solid rgba(255,255,255,0.1); width: 100%; max-width: 400px; box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);">
    
    <div class="text-center mb-4">
      <h2 class="fw-bold" style="text-shadow: 0 0 10px rgba(255,255,255,0.5);">Empower Monitor</h2>
      <p class="text-white-50">Please verify your identity</p>
    </div>

    <%= form_with url: session_url do |form| %>
      <div class="mb-3">
        <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", placeholder: "Enter your email", class: "form-control form-control-lg", style: "background: rgba(0,0,0,0.2); border: none; color: white;" %>
      </div>

      <div class="mb-4">
        <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Enter your password", maxlength: 72, class: "form-control form-control-lg", style: "background: rgba(0,0,0,0.2); border: none; color: white;" %>
      </div>

      <div class="d-grid">
        <%= form.submit "Sign In", class: "btn btn-primary btn-lg", style: "background-color: #8e44ad; border: none; font-weight: bold;" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
       <small class="text-white-50">Authorized Personnel Only</small>
    </div>
  </div>
</div>
